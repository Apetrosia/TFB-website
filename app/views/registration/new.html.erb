<div class="flex mt-20 min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h6 class="mt-10 text-3xl font-bold text-center justify-center leading-9 ">
      Вход
    </h6>
  </div>

  <div class="flex space-y-6 justify-center mt-10">
    <%= form_for :user, url: '/auth' do |f| %>
      <div class="flex-col justify-center">
        <div class="flex-row">
          <label for="login" class="font-medium"> Почта </label>
          <div class="mt-1.5">
            <input id="login" name="[user]login" placeholder="Введите почту" type="text" class="rounded-md">
          </div>
        </div>

        <div class="flex-row mt-4">
          <label for="password" class="font-medium"> Пароль </label>
          <div class="mt-1.5">
            <input id="password" name="[user]password" class="rounded-md " placeholder="Введите пароль" type="password"  >
          </div>
        </div>

        <div class="flex-row mt-4">
          <label for="password" class="font-medium"> Повтор пароля </label>
          <div class="mt-1.5">
            <input id="password" name="[user]password" class="rounded-md " placeholder="Введите пароль" type="password"  >
          </div>
        </div>
      </div>
      <div class="flex justify-center">
        <%= submit_tag 'Войти', class: "bg-green-600 flex justify-center mt-3 px-10 py-1 text-white font-medium mx-1 rounded-md" %>
      </div>
    <%end %>
  </div>

  <div class="flex justify-center">
    <div class="flex flex-col justify-center m-4">
      <a href="/auth" class=" text-gray-500  hover:underline hover:text-gray-800">
        Уже есть учётная запись? Войти!
      </a>
    </div>
  </div>
</div>