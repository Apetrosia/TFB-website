<div class="flex mt-20 min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h6 class="mt-24 text-3xl font-bold text-center justify-center leading-9 ">
      Восстановление пароля
    </h6>
  </div>
  <div class="flex space-y-6 justify-center mt-5">
    <%= form_for :email, url: '/email_verification' do |f| %>
    <div>
      <div class="flex w-full px-6 justify-center">
        <label for="email"></label>
        <div class="mt-1.5 w-full flex justify-center">
          <input id="email" name="[email]email" placeholder="Введите почту" type="email" class="w-full focus:ring-pale-yellow focus:border-pale-yellow active:ring-pale-yellow active:border-pale-yellow active:ring-1 focus:ring-1 rounded-md">
        </div>
      </div>
      <div class="relative mx-auto  text-center justify-center mt-7">
        <%= submit_tag 'Отправить код подтверждения на почту', class: "hover:bg-green-700 bg-green-600  px-10 py-1 text-white font-medium mx-1 rounded-md" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
