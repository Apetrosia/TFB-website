<div class=" h-screen bg-pale-green">
  <%= render 'layouts/header' %>
  <div class="flex-col mx-40 my-10">
    <div class="font-serif font-bold text-5xl text-green-950 mb-10">
      <h1>Паспортъ </h1>
    </div>
    <div class=" flex flex-row items-center">
      <div class="flex justify-start mt-6 ml-2 mr-10 rounded-full border-green-950 border-4">
        <%- if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.attached?  , size: 350 %>
        <%- else  %>
          <%= image_tag "ivan.png", size: 350 %>
        <% end %>
      </div>
      <div class="w-full flex-col">
        <div class="flex-col bg-pale-yellow p-8 rounded-xl ml-8 mt-4 w-full border-4 border-green-950">
          <h6 class="font-bold font-serif text-xl">
            Логин
          </h6>
          <div class="text-lg text-black font-serif ml-4">
            <%= current_user.login %>
          </div>

          <h6 class="font-bold font-serif text-xl mt-4">
            Привязанная почта
          </h6>
          <div class="text-lg text-black font-serif ml-4">
            <%= current_user.email %>
          </div>
        </div>

        <div class=" flex flex-row justify-between mt-4 -mb-12 ml-12">
          <div>
            <button class=" font-serif justify-self-start  mx-2 font-semibold text-lg text-pale-yellow  p-2.5 rounded-xl hover:bg-green-950 hover:underline bg-grassy-green">
              Сменить фотокарточку
            </button>
            <button class="  font-serif mx-2 font-semibold text-lg text-pale-yellow  p-2.5 rounded-xl hover:bg-green-950 hover:underline bg-grassy-green">
              Сменить пароль
            </button>
          </div>


          <div  class=" font-serif mx-2 font-semibold text-lg text-pale-yellow  p-2.5 rounded-xl hover:bg-black  bg-green-950 hover:text-red-600">
            <%= link_to "Выход", :controller => :auth, :action => :destroy %>
          </div>
        </div>
      </div>


    </div>

  </div>
</div>

